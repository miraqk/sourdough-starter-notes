@require "_defaults"

body
  background beige pattern
  font-family font_primary
  font-size font_medium

h1
  font-family font_display
  font-size font_large
  margin 0

h2
  font-family font_display
  font-size calc(var(--m2))

p
  margin calc(var(--s0)) 0

ul
  list-style-type none

  li
    margin-bottom calc(var(--m2))

  ol li
    margin calc(var(--s0)) 0

.header
  font-family font_display
  font-size font_extralarge
  margin-top calc(var(--m1))
  text-align center

.layout
  margin 0 auto
  max-width calc(80 * var(--vw))